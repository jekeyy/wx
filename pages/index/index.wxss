
page{
  width: 100%;
  height: 100%;
}
.wraper{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background-color: rgb(212, 212, 212);
}
.head{
  height: 50rpx;
  width: 100vw;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx;
  flex: 0 0 100rpx;
}
.userNews{
  height: 70rpx;
  width: 100vw;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.userFans{
  height: 70rpx;
  width: 100vw;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-top: 1rpx solid #dbdada;padding: 10rpx;
}
.userFans view{
flex: 1;
display: flex;
flex-direction: row;
align-items: center;
}
.userNews image{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}
.main{
  flex: 1;
  position: relative;
  height: 85vh;
}
.main-scroll{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
.head image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
.head input{
  height: 50rpx;
  width: 400rpx;
  border-radius: 30rpx;
  background-color: rgb(231, 231, 231);
  margin-left: 52rpx;
  margin-right: 32rpx;
  font-size: 30rpx;
  padding-left: 20rpx;
}
.navss{
  display: flex;
  flex-direction: row;
}
.headNews image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 50rpx;
  
}
.newsInfo{
  font-size: 30rpx;  background-color: #fff;
  padding-left: 20rpx;
  padding-bottom: 20rpx;
}
.newsList{
  display: flex;
  flex-direction: row;
}
/* 轮播图图片尺寸 */
  
.home-swiper {
  width: 92%;
  height: 350rpx;
}
  
.home-swiper image {
  width: 100%;
  height: 100%;
}
  .dotsBox{
    width: 100vw;
    height: 400rpx;
    background-color: #fff;
    margin-top: 15rpx;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }
/* 轮播图指示点 */
  
.dots {
  display: flex;
  flex-direction: row;
  position: absolute;
  top: 380rpx;
  width: 100%;
  height: 50rpx;
  justify-content: center;
}
  
.dots .dot {
  width: 12rpx;
  height: 12rpx;
  /* background-color: #333; */
  /* border: 1rpx solid #e8672e; */
  margin-left: 12rpx;
  background: rgb(207, 207, 207);
  border-radius: 50%;
  /* transform: all 0.6; */
  opacity: 0.44;
}
  
/* 调用的css效果 */
  
.dots .actives {
  background-color: rgb(0, 0, 0);
  opacity: 1;
}
.ad{
  background-color: rgb(212, 212, 212);
  width: 70rpx;
  height: 40rpx;
  position: absolute;
  top: 25rpx;
  right: 31rpx;
  font-size: 30rpx;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.newsHeader{
  width: 100vw;
  background-color: #fff;
  margin-top: 15rpx;
  padding: 15rpx;
  padding-right: 20rpx;
}
.gz{
  
  border: solid 1px rgb(230, 77, 31);
  border-radius: 20rpx;
  display: inline-block;
font-size: 25rpx;
line-height: 20rpx;
  color: rgb(230, 77, 31);
  padding: 10rpx;
}
